<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/upvote_answer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/upvote"
        android:src="@drawable/upvote" />

    <TextView
        android:id="@+id/answer_upvote_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/upvote_answer_button"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/detail_answer_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/upvote_answer_button"
        android:minHeight="100dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="12sp" />

</RelativeLayout>