<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/upvote_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/upvote"
        android:src="@drawable/upvote" />

    <TextView
        android:id="@+id/question_upvote_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/detail_question_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/detail_question_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/question_ImageViewFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:cropToPadding="true"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:scaleType="centerInside" />

</LinearLayout>