<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/upvote_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/upvote"
        android:src="@drawable/upvote" />
 

    <TextView
        android:id="@+id/question_upvote_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/upvote_question_button"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/detail_question_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/question_upvote_caption"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/upvote_question_button"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/detail_question_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/question_upvote_caption"
        android:layout_toLeftOf="@+id/upvote_question_button"
        android:minHeight="100dp"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/question_ImageViewFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_question_body"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@android:color/darker_gray"
        android:cropToPadding="true"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/favouriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/detail_question_body"
        android:src="@drawable/ic_action_star"
        android:onClick="addFavorite" />

</RelativeLayout>